<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:showIn="@layout/orange_dialog_input">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
           >

        <TextView
                android:id="@+id/dialogNegative"
                style="@style/orange_DialogStyle.Negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:text="取消" />

        <TextView
                android:id="@+id/dialogPositive"
                style="@style/orange_DialogStyle.Positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/dialogNegative"
                android:text="确定"
                android:textColor="@color/white" />
    </RelativeLayout>
</merge>